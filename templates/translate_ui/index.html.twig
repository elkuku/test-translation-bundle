{% extends 'base.html.twig' %}

{% block title %}Translate UI{% endblock %}

{% block body %}
    <div
        data-controller="translate-ui"
    >
        <h2>Translate UI âœ…</h2>

        <nav class="nav nav-tabs">
            {% for objectName in objectNames %}
                <a
                    href="#"
                    class="nav-link"
                    {{ stimulus_target('translate-ui', 'object') }}
                    {{ stimulus_action(
                        'translate-ui', 'switchObject', 'click',
                        {'uri': path('app_translate_ui_list', {'objectName': objectName})}
                    ) }}
                >
                    {{ objectName|title }}
                </a>
            {% endfor %}
        </nav>

        <div data-translate-ui-target="listContainer"></div>

    </div>
{% endblock %}
